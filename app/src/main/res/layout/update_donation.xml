<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <View
        android:id="@+id/view2"
        android:layout_width="448dp"
        android:layout_height="100dp"

        android:background="@drawable/ic_wave" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/eTDate"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="165dp"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:ems="10"
            android:hint="Datum"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-160dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="165dp"
            android:background="@drawable/round_bg"
            android:text="Izaberi"
            android:textColor="#FDFAFA"
            android:textStyle="bold" />


    </LinearLayout>


    <EditText
        android:id="@+id/eTAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/round_border"
        android:drawableLeft="@drawable/ic_baseline_add_location_24"
        android:ems="10"
        android:hint="Adresa"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/eTNumOfMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_border"
        android:drawableLeft="@drawable/ic_baseline_sentiment_satisfied_alt_24"
        android:ems="10"
        android:hint="Broj doniranih obroka"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/update"
            android:layout_width="186dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_delete_24"

          />


    </LinearLayout>


</LinearLayout>